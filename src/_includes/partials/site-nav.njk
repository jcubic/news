<nav class="site-nav nav-padding universal-nav">
    <div class="site-nav-left">
        {% include "partials/search-bar.njk" %}
    </div>
    <div class="site-nav-middle">
        <a class="site-nav-logo" href="{{ site.url }}" data-test-label="site-nav-logo"><img src="{{ site.logo }}" alt="{{ site.title }}" /></a>
    </div>
    <div class="site-nav-right">
    <div class="nav-group">
      <a
          class="toggle-button-nav"
          id="nav-donate"
          rel="noopener noreferrer"
          href="{% t 'links:donate' %}"
          target="_blank"
          data-test-label="donate-button"
      >{% t 'buttons.donate' %}</a>
    <button
      class='toggle-button-nav'
      id='toggle-button-nav'
      data-test-label='header-menu-button'
    >
      <span class='menu-btn-icon'>
        <i class="fa-solid fa-bars"></i>
        <span class='sr-only'>{% t 'buttons.menu' %}</span>
      </span>
      <span class='menu-btn-text'>{% t 'buttons.menu' %}</span>
      </button>
      </div>
    </div>
    <ul
      aria-labelledby='toggle-button-nav'
      data-test-label='header-menu'
      class="nav-list"
      id="nav-list">
       <li key='learn'>
        <a class='nav-link nav-link-flex nav-link-header' href="{% t 'links:nav:learn' %}"/>
           <span>{% t 'buttons.curriculum' %}</span>
         <span class='sr-only'>{% t 'aria.opens-new-window' %}</span>
          <i class="fa fa-external-link" aria-hidden="true"></i>
        </a>
      </li>
      <li key='forum' class='nav-line'>
        <a
          class='nav-link nav-link-flex'
          target="_blank"
          href="{% t 'links:nav:forum' %}"
          data-test-label="forum-button"
        >
          <span>{% t 'buttons.forum' %}</span>
          <span class='sr-only'>{% t 'aria.opens-new-window' %}</span>
          <i class="fa fa-external-link" aria-hidden="true"></i>
      </a>
      </li>
      <li key='dark-mode' class='nav-line'>
         <button class="nav-link nav-link-flex nav-link-header" id="toggle-dark-mode" data-test-label="dark-mode-button">
        <span>{% t 'buttons.toggle-dark-mode' %}</span>
         <i id="dark-mode-enabled" class="fa fa-square" aria-hidden="true"></i>
        </button>
      </li>
    </ul>
</nav>
